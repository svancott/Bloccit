<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="mdeia-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>
<% if has_not_posted_or_commented(@user) %>
  <div>
    <h2> <%= @user.name %> has not submitted any posts yet.</h2>
<% else %>
    <h2>Posts</h2>
    <%= render @user.posts %>
    <h2>Comments</h2>
    <%= render @user.comments %>
  </div>
<% end %>
<% if @user.favorites.empty? %>
  <div>
    <h2><%= @user.name %> has no favorite posts.</h2>
  </div>
<% else %>
  <div>
    <h2 >Favorite Posts:</h2>
      <div>
        <% @user.favorites.each do |favorite| %>
        <div>
          <%= Post.where(post_id: favorite.id) %>

        </div>
        <% end %>
      </div>
  </div>
<% end %>
